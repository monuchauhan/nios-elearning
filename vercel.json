{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/chapter/(.*)", "dest": "/public/chapter.html" },
    { "src": "/login", "dest": "/public/login.html" },
    { "src": "/signup", "dest": "/public/signup.html" },
    { "src": "/course", "dest": "/public/course.html" },
    { "src": "/payment", "dest": "/public/payment.html" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
